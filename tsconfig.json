{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": false,
    "declaration": true,
    "strict": false,
    "removeComments": true,
    "paths": {
      "app/*": [
        "src/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
